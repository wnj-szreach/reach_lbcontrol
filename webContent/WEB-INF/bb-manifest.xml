<?xml version="1.0" encoding="UTF-8"?>
<manifest>
	<!-- core extension information -->
	<plugin>
		<name value="Record Platform" />
		<handle value="reachPlatform" />
		<description value="Reach Record Platform" />
		<version value="1.0.0" />
		<requires>
			<bbversion value="9.0" />
		</requires>
		<vendor>
			<id value="bb" />
			<name value="Reach Technology" />
			<url value="http://www.szreah.com/" />
			<description value="SZREACH" />
		</vendor>

		<!-- These two JSPs are displayed when the "remove" and "properties" buttons -->
		<!-- are pressed on the Building Blocks administration page. -->
		<!-- <http-actions> <config value="admin/configure.jsp"/> <remove value="admin/remove.jsp"/> 
			</http-actions> -->
		<application-defs>
			<application handle="plugin.name" type="shared" use-ssl="false"
				name="plugin.vendor.id" can-allow-guest="false" is-course-tool="false"
				is-group-tool="false">
				<description lang="en_US">reach
				</description>
				<links>
					<link>
						<type value="system_tool"></type>
						<name value="Record Platform"></name>
						<url value="lbcontrol.action?fn=20007"></url>
						<description value="Control Room Records" />
					</link>
				</links>
			</application>
		</application-defs>

		<!-- Portal Module Definitions -->
	    <module-defs>
	      <module type="portal/includehtml" isadmin="false" useraddable="true" isdeletable="true" isdetachable="true" title="Record Platform">
	        <description>Click The Link To Record Platform.</description>
	        <ExtraInfo>
	          <property key="body.type" type="String">1</property>
	          <property key="body.text" type="String">&lt;table&gt;&lt;tr&gt;&lt;td&gt;
	          &lt;a target="_blank" href="/webapps/bb-reachPlatform-BBLEARN/lbcontrol.action?fn=10001"&gt;
	           &lt;img border=0 src="/webapps/bb-reachPlatform-BBLEARN/images/logo.png"/&gt;&lt;/a&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;</property>
	        </ExtraInfo>
	        <module-groups>
	          <module-group id="Everyone" />
	        </module-groups>
	      </module>
	    </module-defs>
	    
	    
		<!-- Custom Content Types -->
		<content-handlers>
		</content-handlers>

		<!-- code permissions required for proper operation -->
		<permissions>
			<permission type="attribute" name="user.authinfo" actions="get" />
			<permission type="attribute" name="user.personalinfo" actions="get,set" />
			<permission type="java.net.SocketPermission" name="*" actions="connect,resolve"/>
		</permissions>

	</plugin>

</manifest>